@model LoginModel

<div class="text-center my-5">
	<i class="fa-solid text-white fa-right-to-bracket bg-success p-3 rounded-3"></i>
	<br/>
	Login
</div>
<div class="row">
	<div class="col-md-3"></div>
	<div class="col-md-6">
		<div>
			<div class="text-danger" asp-validation-summary="All"></div>
		</div>
		<form method="post" asp-action="Login">
			<input type="hidden" asp-for="ReturnUrl"/>

			<div class="form-group my-3">
				<label asp-for="Name"></label>
				<input asp-for="Name" class="form-control" />
			</div>
			<div class="form-group my-3">
				<label asp-for="Password"></label>
				<input type="password" asp-for="Password" class="form-control" />
			</div>

			@* buttons *@
			<div class="form-group my-3 d-flex justify-content-center">
				<button type="submit" class="btn btn-success"> 
					<i class="fa-solid fa-right-to-bracket"></i>
					Login 
				</button>
			</div>
		</form>

		<div class="text-center">
			If You don't account. Please click here to achieve <a asp-action="Register"> Registration Page</a>
		</div>
	</div>
	<div class="col-md-3"></div>
</div>