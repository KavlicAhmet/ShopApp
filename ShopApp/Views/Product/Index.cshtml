@model ProductListViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="container">
	<div class="row">
		<div class="col-md-3">
			@await Component.InvokeAsync("CategoriesMenu")
			@await Component.InvokeAsync("ProductFilterMenu")
			<div products="" number="3"></div>
		</div>
		<div class="col-md-9">
			<div class="row">
				@foreach (var p in Model.Products)
				{
					<partial name="_Card" model="@p" />
				}
			</div>
			<div>
				<div page-model="@Model?.Pagination" page-action="Index" 
				page-classes-enabled="true" page-class="btn" page-class-normal="btn-outline-info"
				page-class-selected="btn-primary" class="btn-group"></div>
			</div>
		</div>
	</div>
</div>



