@model Product

<div class="col-md-4 my-3">
	<div class="card" style="width: 18rem; min-height: 400px;">
		<div class="card-header text-center">
			@Model?.ProductName
		</div>
		<div class="container">
			<img src="@Model?.ImageUrl" class="card-img-top" alt="@Model?.ProductName" style="width: 100%; height: 200px; object-fit: cover;">
		</div>
		<div class="card-body">
			<p class="card-text">@Model?.Summary</p>
			<h3 class="card-title">@Model?.Price.ToString("c2")</h3>
			<div class="d-flex justify-content-center">
				<div class="btn-group" role="group" aria-label="Basic example">
					<a class="btn btn-outline-secondary" asp-controller="Product" asp-action="Details" asp-route-id="@Model?.ProductId"><i class="fa-solid fa-arrow-right"></i></a>
					<form id="@Model?.ProductId" asp-page="/Cart" method="post">
						<input type="hidden" asp-for="ProductId">
						<input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()">
						<button type="submit" class="btn btn-outline-secondary mx-1"><i class="fa-solid fa-cart-plus"></i></button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
